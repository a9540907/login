<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
  <div class="card d-flex flex-column justify-content-center align-items-center px-5 py-3 mt-5">
    <div class="my-3">
      <h3>Account Login</h3>
    </div>

    <form action="/login" method="POST">
      <div class="form-group row justify-content-center">
        <label class="col-md-5 col-form-label" for="inputEmail">Email address: </label>
        <div class="col-md-7">
          <input type="email" class="form-control" name="emailAccount" id="inputEmail" placeholder="Email123@ac.com">
          {{#if check}}
          <small class="hint"><i class="fas fa-info-circle"></i>帳號不存在或是密碼錯誤</small>
          {{/if}}
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <label for="inputPassword" class="col-md-5 col-form-label">Password: </label>
        <div class="col-md-7">
          <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password">
        </div>
      </div>

      <div class="row justify-content-center my-2">
        <button type="submit" class="btn btn-primary">Log in</button>
      </div>
    </form>

  </div>
</div>